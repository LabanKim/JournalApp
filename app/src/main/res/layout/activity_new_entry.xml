<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewEntryActivity"
    android:padding="10dp">

    <EditText
        android:id="@+id/et_entry_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp"
        android:background="@drawable/rectangle"
        android:padding="10dp"
        android:ems="10"
        android:inputType="textCapSentences|textAutoCorrect"
        android:hint="Entry Title" />

    <EditText
        android:id="@+id/et_entry_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="85dp"
        android:ems="10"
        android:maxLines="20000"
        android:background="@drawable/rectangle"
        android:padding="10dp"
        android:inputType="textCapSentences|textAutoCorrect|textMultiLine|textLongMessage"
        android:hint="Content..." />

</RelativeLayout>